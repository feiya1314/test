<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.feiya.test.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/about_back"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_menu_back"
            />
        <TextView
            android:layout_width="45sp"
            android:layout_height="30sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="关于"
            android:textSize="20sp"
            android:textColor="@color/menu"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/menu"
            android:textSize="40sp"
            android:gravity="center|bottom"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="形变监测" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/menu"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:gravity="top|center"
            android:layout_weight="1"
            android:text="V1.0.0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/about_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="35sp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:text="项目主页"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:text="Copyright©2016 Feiya1314."
                android:textColor="#6e6e6e"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:text="All Rights Reserved."
                android:textColor="#6e6e6e"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>